@using ImageShareWithLikes.Data 
@model ImagesViewModel
<div class="row">
    <div class="col-md-8 offset-md-2">
        @foreach (Image image in Model.Images)
        {

            <div class="jumbotron" style="margin-bottom: 20px; text-align: center;">
                <a href="/home/viewimage?id=@image.Id">
                    <h3>@image.Title</h3>
                    <h5>Uploaded at: @image.DateUploaded</h5>
                    <img style="width: 400px;" src="/uploads/@image.ImageLocation" />
                </a>
            </div>
           
        }
    </div>
    </div>



